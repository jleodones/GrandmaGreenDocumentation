.floatClouds {
    translate: 200% 0;
    transition-duration: 500s;
}

.resetCloud {
    left: -100%;
}

.pushLeftCloud {
    translate: 25% 0;
    transition-duration: 800ms;
}

.bounceGolem {
    translate: 0 -115%;
}

#golemSpriteX {
    transition-duration: 2s;
}

.pushRightCloud {
    translate: -25% 0;
    transition-duration: 800ms;
}

.smallText {
    scale: 0.5 0.5;
}

.largeText {
    scale: 1.5 1.5;
}

.pushGolem {
    translate: 0 -160%;
    transition-duration: 500ms;
}
