#blossom:hover {
    transition-duration: 0.5s, 0.5s;
    transition-property: scale, rotate;
    scale: 2 2;
    rotate: -20deg;
    transition-timing-function: ease, ease-in-out-sine;
    transition-delay: 0s, 0s;
}

#container:hover > #blossom {
    visibility: visible;
    scale: 3 3;
    rotate: -25deg;
    transition-property: scale, rotate, display;
    transition-duration: 0.5s, 0.5s, 2s;
    transition-timing-function: ease-in-out, ease-in-out-sine, ease-in;
    display: flex;
}
